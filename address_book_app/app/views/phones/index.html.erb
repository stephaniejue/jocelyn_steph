<%= stylesheet_link_tag "application", media: "all" %>
<%= javascript_include_tag "application" %>

<h1>Phone List</h1>
<table>
  <tr>
    <th>Full Name</th>
    <th>Phone Number</th>
    <th>Description</th>
  </tr>
  <% @phones.each do |phone| %>
  <tr>
    <td><%= phone.contact.given_name + " " + phone.contact.family_name%></td>
    <td><%= phone.number %></td>
    <td><%= phone.description %></td>
  </tr>
<% end %>
</table>
