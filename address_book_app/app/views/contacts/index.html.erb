<%= stylesheet_link_tag "application", media: "all" %>
<%= javascript_include_tag "application" %>

<h1>Address Book</h1>



<form action="/contacts/find" method="get">
  <label for="contacts_family_name">Find Contact: </label>
  <input id="contacts_family_name" name="family_name" type="text" placeholder="Enter Family Name">
  <button>Search</button>
</form>
</br>
<a href="/contacts"><button>All Contacts</button></a>
<a href="/contacts/sort"><button>Sort By Family Name</button></a>
</br>
</br>

<table>
  <tr>
    <th>Contact id</th>
    <th>Given Name</th>
    <th>Family Name</th>
    <th>Email</th>
    <th>Address</th>
    <th>Phones</th>
  </tr>
  <% @contacts.each do |contact| %>
  <tr>
    <td><%= contact.id %></td>
    <td><%= contact.given_name %></td>
    <td><%= contact.family_name %></td>
    <td><%= contact.email %></td>
    <td><%= contact.address %></td>
    <td><% contact.phones.each do |phone| %>
      <%="#{phone.number} (#{phone.description})"%>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

</br>
<a href="/contacts/create"><button>Create</button></a>
<a href="/contacts/update"><button>Update</button></a>
<a href="/contacts/delete"><button>Delete</button></a>
</br></br>
