<%= stylesheet_link_tag "application", media: "all" %>
<%= javascript_include_tag "application" %>

<h2>Delete Contact</h2>

<h4><%= flash[:alert] %></h4>
<form action="/contacts/delete" method="get">
  <label for="search_given_name">Given Name: </label>
  <input id="search_given_name" type="text" name="search_given_name" placeholder="Enter Given name"/>
  <label for="search_family_name">Family Name: </label>
  <input id="search_family_name" type="text" name="search_family_name" placeholder="Enter Family name"/>
  <input type="submit" value="Search"/>
</form>

<% if @given_name.present?%>
  <h4>Would you like to delete this user?</h4>
  <strong>Name:</strong> <%= @given_name %> <%= @family_name %></br>
  <strong>Email:</strong> <%= @email %></br>
  <strong>Address:</strong> <%= @address %></br>
  </br>
  </br>
  <form action="/contacts/delete" method="post">
    <input name="delete" type="radio" value="Yes" onclick="this.form.submit();"/>
    <label for="age_child">Yes</label>
    <input name="delete" type="radio" value="No" onclick="this.form.submit();"/>
    <label for="age_adult">No</label>
  </form>
<% end %>


</br>
<a href="/contacts"><button>Address Book</button></a>
